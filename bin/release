#!/usr/bin/env bash

# Paths
ROOT_DIR=$(dirname "$BASH_SOURCE")/..
BUILD_DIR="$ROOT_DIR/build"

main() {
  cmd="$1"
  shift

  pushd "$BUILD_DIR"

  if [[ "$cmd" == "build" ]]; then
    build "$@"
  elif [[ "$cmd" == "push" ]]; then
    push "$@"
  elif [[ "$cmd" == "status" ]]; then
    status "$@"
  else
    exit_error "IDK what to do with: $1"
  fi
}

build() {
  pushd "$1" || exit "No build directory: $1" 
  cp ../patched.main.js ./main.js
  cp ../icon.png ./icon.png
  electron-builder
}

push() {
  pushd "$1" || exit "No build directory: $1" 
  bundle="./dist/win-unpacked"
  if [[ ! -d "$bundle" ]]; then
    exit "No bundle directory: $bundle"
  fi
  
  butler_target=$(cat win/BUTLER_TARGET.txt)
  if [[ ! "$butler_target" =~ 'unbound' ]]; then
    exit "Invalid butler target: $butler_target"
  fi

  echo "Doing butler."
  butler push "$bundle" "$butler_target"
}

status() {
  butler_target=$(cat win/BUTLER_TARGET.txt)
  if [[ ! "$butler_target" =~ 'unbound' ]]; then
    exit "Invalid butler target: $butler_target"
  fi

  butler status "$butler_target"
}

exit_error() {
  echo "Error: $@" 1>&2
  exit 1
}

main "$@"